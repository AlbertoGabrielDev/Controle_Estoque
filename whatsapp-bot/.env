# Sessão do WPPConnect
WPP_SESSION=pedido-session

# Porta HTTP do seu bot (rotas /verdurao/bot/whatsapp/*)
PORT=3001

# Escolha de modo de integração:
# - true  → o bot envia as mensagens para o n8n (webhook)
# - false → o bot chama diretamente seu Laravel (API_BASE_URL)
USE_N8N=true

# ========= Quando USE_N8N = true =========
# Cole aqui a Production URL do NÓ WEBHOOK do n8n (deve conter /webhook/)
N8N_WEBHOOK_URL=https://botwhatsapplaravel.app.n8n.cloud/webhook/whatsapp-in

# ========= Quando USE_N8N = false =========
# Base pública do seu Laravel (ex.: ngrok, domínio público, ou localhost se tudo roda na mesma máquina)
# Exemplo local: http://127.0.0.1:8000
# Exemplo Docker-to-Docker: http://laravel_app:8000
API_BASE_URL=http://127.0.0.1:8000

# Mesmo valor do seu Laravel (.env) em services.n8n.api_key
# Usado quando USE_N8N = false
N8N_API_KEY=dj2321hsadh82q323
